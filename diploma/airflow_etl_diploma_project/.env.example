# ============================================
# AIRFLOW CONFIGURATION
# ============================================
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.
AIRFLOW_PORT=8080

# Airflow Web UI credentials
AIRFLOW_WWW_USER_USERNAME=admin
AIRFLOW_WWW_USER_PASSWORD=admin

# Airflow Postgres Database
AIRFLOW_POSTGRES_HOST=postgres-airflow
AIRFLOW_POSTGRES_PORT=5432
AIRFLOW_POSTGRES_DB=airflow_db
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow

# ============================================
# POSTGRESQL SOURCE DATABASE
# ============================================
POSTGRES_SOURCE_HOST=postgres-source
POSTGRES_SOURCE_PORT=5433
POSTGRES_SOURCE_DB=source_db
POSTGRES_SOURCE_USER=source_user
POSTGRES_SOURCE_PASSWORD=ChangeMe_Source_Pass_123
POSTGRES_SOURCE_EXTRA={"sslmode": "disable"}

# ============================================
# POSTGRESQL ANALYTICS DATABASE
# ============================================
POSTGRES_ANALYTICS_HOST=postgres-analytics
POSTGRES_ANALYTICS_PORT=5434
POSTGRES_ANALYTICS_DB=analytics_db
POSTGRES_ANALYTICS_USER=analytics_user
POSTGRES_ANALYTICS_PASSWORD=ChangeMe_Analytics_Pass_456
POSTGRES_ANALYTICS_EXTRA={"sslmode": "disable"}

# ============================================
# MONGODB
# ============================================
MONGO_ROOT_USER=mongo
MONGO_ROOT_PASSWORD=mongo
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DATABASE=feedback_db
MONGO_USER=user
MONGO_PASSWORD=user_pass
MONGO_COLLECTION=feedback
MONGO_EXTRA={"authSource": "admin", "readPreference": "secondaryPreferred"}

# ============================================
# FTP SERVER (если используется)
# ============================================
FTP_HOST=ftp-server
FTP_PORT=21
FTP_USER=ftp_user
FTP_PASSWORD=ChangeMe_FTP_Pass_321
FTP_PATH=/

# ============================================
# REST API (если используется)
# ============================================
API_URL=https://api.example.com
API_KEY=your_api_key_here
# or API_TOKEN
API_TOKEN=your_api_token_here
API_TIMEOUT=30
API_EXTRA={"timeout": 30, "headers": {"User-Agent": "Airflow-ETL/1.0"}}

# ============================================
# GRAFANA
# ============================================
GF_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
GF_AUTH_ANONYMOUS_ENABLED=true
